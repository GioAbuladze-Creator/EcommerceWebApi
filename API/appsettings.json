{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "File": {
            "Path": "Logs/errors.log",
            "MinimumLevel": "Error"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "Default": "Server=(localdb)\\mssqllocaldb;Database=EcommerceLatest;Trusted_Connection=True;Encrypt=False;MultipleActiveResultSets=true"
    },
    "JwtSettings": {
        "Key": "ThisIsASecretKeyForJwtTokenGeneration",
        "Issuer": "EcommerceApi",
        "Audience": "EcommerceClient",
        "DurationInMinutes": 60
    }
}
